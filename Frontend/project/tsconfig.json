{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx", // Enable JSX support (recommended for React 17+)
    "target": "es6", // Compile to ES6 (modern JavaScript)
    "module": "esnext", // Use ES modules
    "moduleResolution": "node", // Resolve modules using Node.js style
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "strict": true, // Enable strict type-checking options
    "noEmit": false, // Allow TypeScript to emit JavaScript files (set to true if using a bundler like Webpack/Vite)
    "skipLibCheck": true, // Skip type checking of declaration files for faster compilation
    "forceConsistentCasingInFileNames": true, // Ensure consistent file name casing
    "resolveJsonModule": true // Allow importing JSON files
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": ["node_modules"] // Exclude node_modules
}